<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Request Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Property -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avenida Africa, 8609, Tijuana"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Tenant Name -->
        <TextView
            android:id="@+id/tvTenantNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant Name:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTenantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="John Doe"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Tenant Phone -->
        <TextView
            android:id="@+id/tvTenantPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant Phone:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTenantPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123-456-7890"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:visibility="gone" />

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Structural"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More damages in my wall"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Priority -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Owner Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Note:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvOwnerNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No notes available"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Report Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Date:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvReportDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-11-29"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Dispatch Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispatch Date:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvDispatchDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not reviewed yet"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Maintenance Cost -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Cost:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/tvMaintenanceCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="16sp"
            android:textColor="@color/green_cost"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
