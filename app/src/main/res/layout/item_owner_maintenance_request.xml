<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tipo de solicitud -->
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Pest Control"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Too much rats in my room"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <!-- Fecha reportada -->
        <TextView
            android:id="@+id/tvReportedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported Date: 11/30/2024"
            android:textSize="14sp"
            android:paddingBottom="4dp" />

        <!-- Prioridad -->
        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority: High"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:textColor="@color/priority_high" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:textColor="@color/status_pending" />

        <!-- Botón alineado a la derecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#047857"
                android:text="View Details" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
